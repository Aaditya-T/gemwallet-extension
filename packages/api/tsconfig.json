{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
