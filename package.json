  "scripts": {
    "start": "react-scripts start",
    "build": "INLINE_RUNTIME_CHUNK=false GENERATE_SOURCEMAP=false craco build",
    "test": "react-scripts test",
    "lint": "eslint --cache --quiet --fix",
    "prettier": "prettier --write **/*.{js,ts,tsx}",
